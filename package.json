{
    "name": "history",
    "displayName": "History",
    "author": "LeShaps",
    "version": "1.0.0",
    "launcherVersion": "9.1.0",
    "description": "Let you have an history of the last items you've played on Flashpoint",
    "icon": "icon.png",
    "contributes": {
        "configuration": [
            {
                "title": "History",
                "properties": {
                    "com.history.track-extreme": {
                        "title": "Track extreme games",
                        "type": "boolean",
                        "default": true,
                        "description": "When unticked, will prevent extreme games to be recorded in the playlist"
                    }
                }
            }
        ]
    },
    "main": "./dist/ext.js",
    "devDependencies": {
        "@types/node": "^14.14.37",
        "typescript": "^4.2.3"
    },
    "scripts": {
        "build": "tsc"
    },
    "dependencies": {
        "@types/flashpoint-launcher": "^9.1.0",
        "filereader": "^0.10.3"
    }
}
